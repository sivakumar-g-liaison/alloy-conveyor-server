		<class>com.liaison.mailbox.jpa.model.RemoteDownloader</class>
		<class>com.liaison.mailbox.jpa.model.RemoteUploader</class>
		<class>com.liaison.mailbox.jpa.model.Sweeper</class>
		<class>com.liaison.mailbox.jpa.model.Credential</class>
		<class>com.liaison.mailbox.jpa.model.Folder</class>
		<class>com.liaison.mailbox.jpa.model.MailBox</class>
		<class>com.liaison.mailbox.jpa.model.MailBoxProperty</class>
		<class>com.liaison.mailbox.jpa.model.MailBoxSchedProfile</class>
		<class>com.liaison.mailbox.jpa.model.Processor</class>
		<class>com.liaison.mailbox.jpa.model.ScheduleProfilesRef</class>
		
